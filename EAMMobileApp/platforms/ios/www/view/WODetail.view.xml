<mvc:View
    controllerName="com.slb.mobile.view.WODetail"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" >
    <Page
        id="page"
        class="sapUiFioriObjectPage"
        title=" {i18n>detailTitle}"
        showNavButton="{device>/isPhone}"
        navButtonPress="handleNavBack" >
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
               
            </Toolbar>
        </footer>
        <content>
            <ObjectHeader
                binding="{/}"
                title="{WOId}"
                number="{Amount}"
                numberUnit="{CurrencyCode}" >
                <attributes>
                    <ObjectAttribute
                    title="Equipment"
                    text="{Equipment}"
                    active="true"
                     />
                    <ObjectAttribute
                    title="Start"
                    text="{SDate}" />
                    <ObjectAttribute
                    title="End"
                    text="{EDate}" />
                </attributes>
                <statuses>
                    <ObjectStatus
                    text="{NotNumber}"
                     />
                     <ObjectStatus
                     text="Items" />
                     
               </statuses>
            </ObjectHeader>
            <Button text="Notification" class="bNotification" />

            <Table
                id="lineItemList"

                items="{
                path: '/WODetailColection'
                }"
                
                >
                
                <columns>
                    <Column>
                        <header><Label text="Operation" /></header>
                    </Column>
                    <Column
                        
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center">
                        <header><Label text="Description" /></header>
                    </Column>
                    <Column
                        
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center" >
                        <header><Label text="Status" /></header>
                    </Column>
                    <Column>
                        <header><Label text="Assigned To" /></header>
                    </Column>
                    <Column
                        hAlign="Right" >
                        <header><Label text="" /></header>
                    </Column>

                </columns>
                <ColumnListItem
                    type="Navigation"
                    press="handleLineItemPress" >
                    <cells>
                        <Text
                        text="{text}" />
                        <ObjectIdentifier
                        title="{text}"
                        text="{text}" titleActive="true"/>
                        <Text
                        text="{text}" />
                        <Text
                        text="{text}" />
                        <Button text="Start"
                            />
                    </cells>
                </ColumnListItem>
            </Table>
        </content>
    </Page>
</mvc:View>